@model HR.Models.Departments

@{
    ViewData["Title"] = "Edit";

}
@{ Layout = null; }
<h1>Edit</h1>

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col">
        <form asp-action="AddOrEdit" asp-route-id="@Model.Id" onsubmit="return jQueryAjaxPost(this);">
            <div class="row">
                <div class="col-md-4">
                    <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="NameDepartment" class="control-label"></label>
                            <input asp-for="NameDepartment" class="form-control" />
                            <span asp-validation-for="NameDepartment" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                   
                </div>
            </div>
        </form>
    </div>
</div>



