@model HR.Models.Employees

@{
    ViewData["Title"] = "Edit";
}

@{
    Layout = null;
}

<div class="row">
    <div class="col">
        <form asp-action="AddOrEdit" asp-route-id="@Model.Id" onsubmit="return jQueryAjaxPost(this);">
            <div class="row">
                <div class="col-xl-6">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="EmployeeId" class="control-label"></label>
                        <input asp-for="EmployeeId" class="form-control" />
                        <span asp-validation-for="EmployeeId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="OrganizationId" class="control-label"></label>
                        <input asp-for="OrganizationId" class="form-control" />
                        <span asp-validation-for="OrganizationId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EmploymentDate" class="control-label"></label>
                        <input asp-for="EmploymentDate" type="date" asp-format="{0:yyyy-MM-dd}" class="form-control" />
                        <span asp-validation-for="EmploymentDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-xl-6">
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Team" class="control-label"></label>
                        <input asp-for="Team" class="form-control" />
                        <span asp-validation-for="Team" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CompanyShortName" class="control-label"></label>
                        <input asp-for="CompanyShortName" class="form-control" />
                        <span asp-validation-for="CompanyShortName" class="text-danger"></span>
                    </div>
                    <div class="modal_submit_button">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
